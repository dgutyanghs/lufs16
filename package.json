{
    "name": "hevc-audio-normalizer",
    "version": "1.0.0",
    "description": "HEVC视频音频响度调节器 - 桌面版",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder --publish=never",
        "build-win": "electron-builder --win --publish=never",
        "build-mac": "electron-builder --mac --publish=never",
        "build-mac-dir": "electron-builder --mac --dir",
        "build-mac-zip": "electron-builder --mac --publish=never",
        "build-all": "electron-builder --win --linux --publish=never",
        "pack-mac": "electron-builder --mac --dir",
        "build-linux": "electron-builder --linux --publish=never",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --publish=never"
    },
    "keywords": [
        "electron",
        "ffmpeg",
        "hevc",
        "h265",
        "audio",
        "loudness",
        "lufs",
        "video",
        "normalization"
    ],
    "author": {
        "name": "Donnie Yang",
        "email": "dgutyang@gmail.com"
    },
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "fluent-ffmpeg": "^2.1.2",
        "ffmpeg-static": "^5.2.0",
        "ffprobe-static": "^3.1.0"
    },
    "build": {
        "appId": "com.kiro.hevc-audio-normalizer",
        "productName": "HEVC音频响度调节器",
        "directories": {
            "output": "dist"
        },
        "publish": null,
        "files": [
            "main.js",
            "preload.js",
            "renderer.js",
            "index.html",
            "styles.css",
            "node_modules/**/*",
            "!node_modules/.cache",
            "!node_modules/.bin"
        ],
        "extraResources": [
            {
                "from": "node_modules/ffmpeg-static",
                "to": "ffmpeg-static",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "node_modules/ffprobe-static",
                "to": "ffprobe-static",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}-Windows-${version}-${arch}.${ext}",
            "requestedExecutionLevel": "asInvoker"
        },
        "mac": {
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "assets/icon.png",
            "category": "public.app-category.video",
            "bundleVersion": "1.0.0",
            "minimumSystemVersion": "10.14.0",
            "artifactName": "${productName}-macOS-${version}-${arch}.${ext}"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "deleteAppDataOnUninstall": false,
            "runAfterFinish": true,
            "menuCategory": "Video",
            "shortcutName": "HEVC音频响度调节器"
        },
        "dmg": {
            "title": "HEVC音频响度调节器",
            "icon": "assets/icon.png",
            "iconSize": 100,
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ],
            "window": {
                "width": 540,
                "height": 380
            },
            "background": "assets/dmg-background.png"
        }
    }
}